{
  "name": "eaflow",
  "version": "0.1.0",
  "private": true,
  "description": "Git-native enterprise architecture modeling tool with ArchiMate and BPMN support",
  "license": "MIT",
  "author": "EAFlow Contributors",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @eaflow/ui dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.4"
}
